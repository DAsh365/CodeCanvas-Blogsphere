{{!-- Home Template --}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CodeCanvas Blogsphere</title>
  <link rel="stylesheet" href="../public/css/reset.css">
  <link rel="stylesheet" href="../public/css/style.css">
</head>
<body>

  <header>
    <h1>Welcome to CodeCanvas Blogsphere</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        {{#if loggedIn}}
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/logout">Logout</a></li>
        {{else}}
          <li><a href="/login">Login</a></li>
          <li><a href="/signup">Sign Up</a></li>
        {{/if}}
      </ul>
    </nav>
  </header>

  <main>
    {{#each posts}}
      <article class="post">
        <h2 class="post-title">{{this.title}}</h2>
        <p class="post-content">{{this.content}}</p>
        <p class="post-date">Posted on {{this.createdAt}}</p>
        <p class="post-author">by {{this.User.username}}</p>
      </article>
    {{else}}
      <p>No posts to display.</p>
    {{/each}}
  </main>

  <footer>
    <p>&copy; 2024 CodeCanvas Blogsphere</p>
  </footer>

  <script src="../public/js/script.js"></script>
</body>
</html>
